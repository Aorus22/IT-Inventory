generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String
}

model Item {
  id        Int    @id @default(autoincrement())
  nama      String
  jenis     String
  deskripsi String
  stok      Int
  gambar    String
}

model Project {
  id              Int      @id @default(autoincrement())
  nama            String
  deskripsi       String
  status          String
  tanggal_mulai   DateTime
  tanggal_selesai DateTime
}

model Transaksi {
  id        Int      @id @default(autoincrement())
  nama      String
  kuantitas Int
  tanggal   DateTime
  status    String
}

model PurchaseOrder {
  id        Int      @id @default(autoincrement())
  nama      String
  deskripsi String
  tanggal   DateTime
  status    String
}
